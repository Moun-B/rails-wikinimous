<div class="container">
    <div class="row">
      <div class="col-sm-8 col-sm-offset-2">
        <article>
          <h1>
            <%= @article.title %>
            <small>
              <%= link_to edit_article_path(@article) do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Delete #{@article.title}?" } do %>
                <i class="fa-solid fa-trash-can"></i>
              <% end %>
            </small>
          </h1>
          <p><%= @article.content %></p>
        </article>
      </div>
    </div>
  </div>
